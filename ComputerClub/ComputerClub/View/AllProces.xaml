<Window x:Class="ComputerClub.Wind.AllProces"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Wind"
        mc:Ignorable="d"
        Title="Все тарифы" Height="578" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Resources/icon.png">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/заднийфон.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel Orientation="Vertical" Height="562" VerticalAlignment="Top">
            <DataGrid Margin="20,20,20,0" Height="465" MinWidth="720" x:Name="dataGridViewUsers1" VerticalAlignment="Top" Background="LightGray"/>
            <Button MinHeight="40" Width="140" Foreground="White" Background="#FFB2B2B2" BorderBrush="{x:Null}" Margin="540,10,0,0" Command="{Binding RefreshCommand}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Light" Width="Auto" FontSize="22" Text="Обновить" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
